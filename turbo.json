{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  },
  "globalEnv": [
    "NEXT_PUBLIC_API_KEY",
    "NEXT_PUBLIC_AUTH_DOMAIN",
    "NEXT_PUBLIC_PROJECT_ID",
    "NEXT_PUBLIC_STORAGE_BUCKET",
    "NEXT_PUBLIC_MESSAGING_SENDER_ID",
    "NEXT_PUBLIC_APP_ID",
    "NEXT_PUBLIC_MEASUREMENT_ID",
    "NEXT_PUBLIC_AWS_BACKEND_URL"
  ]
}